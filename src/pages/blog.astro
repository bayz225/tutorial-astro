---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../layouts/BlogPost.astro";

const pageTite = "Mon blog"
const allPost = await Astro.glob("../pages/posts/*.md")
---

<BaseLayout pageTite={pageTite}>
	<h1>My Astro Learning Blog</h1>
	<p>C'est ici que je posterai sur mon apprentissage d'Astro.</p>

	<ul>
		{allPost.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
	</ul>
</BaseLayout>
